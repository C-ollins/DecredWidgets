<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/widget_backgroud">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_gravity="right|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/update_status"
            android:gravity="bottom"
            android:textSize="12dp"
            android:layout_gravity="bottom|right" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:id="@+id/price_panel">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:id="@+id/textView"
                        android:textSize="16dp"
                        android:text="$"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false"
                        android:width="18dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp" />

                    <TextView
                        android:id="@+id/text_usd_price"
                        android:textSize="16dp"
                        android:text="@string/dots"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false"
                        android:minWidth="50dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/btc_logo"
                        android:layout_margin="2dp" />

                    <TextView
                        android:id="@+id/text_btc_price"
                        android:textSize="16dp"
                        android:text="@string/dots"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false"
                        android:minWidth="50dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:id="@+id/stake_panel">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:textSize="12dp"
                        android:text="Ticket Price:"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false"
                        android:layout_marginRight="4dp"
                        android:minWidth="75dp"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/text_ticket_price"
                        android:textSize="16dp"
                        android:text="@string/dots"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/textView4"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false"
                        android:text="Price Change:"
                        android:layout_marginRight="4dp"
                        android:minWidth="75dp"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/text_price_change"
                        android:textSize="16dp"
                        android:text="@string/dots"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textIsSelectable="false" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>